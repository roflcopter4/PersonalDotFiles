#!/bin/dash

ID_SHELL() {                                                     
    if ! ( [ "$(uname)" = 'DragonFly' ]  || [ "$(uname)" = 'OpenBSD' ] || \
           [ "$(uname -o)" = 'Cygwin' ]  || [ "$(uname -o)" = 'Msys' ] )
    then
        printf "%s" "$(basename "$(ps -o comm= $$)")"
    elif [ "$IS_ZSH" = 'true' ]; then
        printf "%s" 'zsh'
    else
        printf "%s" 'OTHER'
    fi
}


Exists() {
    command -v "$1" >/dev/null 2>&1
    return $?
}


# -g  -> Soft global alias - add global flag if shell is zsh.
# -G  -> Hard global alias - same as above but don't make alias at all unless zsh.
# -s  -> Soft sudo         - add sudo if not root.
# -S  -> Hard sudo         - add sudo if not root, and don't make alias otherwise.
# -t  -> Test program      - only make alias if the given command exists.
# -T  -> Better test       - only make alias if its base command exists.
mkalias() {
    OPTIND=1  # For some incomprehensible reason bash doesn't reset OPTIND by default.
    local alias_cmd alias_cmd_tmp do_sudo do_test do_alt do_global
    do_sudo=false do_test=false do_alt=false do_global=false
    
    while getopts 'gGsSt:TA' ARG "$@"; do
        case "$ARG" in
            g)
                [ "$(ID_SHELL)" = 'zsh' ] && do_global=true
                ;;
            G)
                [ "$(ID_SHELL)" = 'zsh' ] || return 1
                do_global=true
                ;;
            s)
                [ "$(id -u)" -ne 0 ] && do_sudo=true
                ;;
            S)
                [ "$(id -u)" -ne 0 ] && do_sudo=true || return 1
                ;;
            t)
                command -v "$OPTARG" >/dev/null 2>&1 || return 1
                ;;
            T)
                do_test=true
                ;;
            A)
                do_alt=true
                ;;
            *)
                echo 'Invalid arg -> '"'$ARG'" >&2 ; return 1
                ;;
        esac
    done
    shift $((OPTIND - 1))

    if $do_alt; then
        TEMP=$(echo "$2" | sed 's/\([[:alnum:][:punct:]]*\).*/\1/')
        if Exists "$TEMP"; then
            alias_cmd_tmp="${1}=${2}"
        else
            alias_cmd_tmp="${1}=${3}"
        fi

    elif $do_test; then
        TEMP=$(echo "$1" | sed "s/[^=]*=['\"]\\{0,1\\}\\([[:alnum:][:punct:]/]*\\).*['\"]\\{0,1\\}/\\1/")
        #TEMP=$(echo "$1" | sed "s/[^=]*=['\"]\\{0,1\\}\\([0-9A-Za-z/._-]*\\).*['\"]\\{0,1\\}/\\1/")
        Exists "$TEMP" || return 1
        alias_cmd_tmp=$1

    else
        alias_cmd_tmp=$1
    fi


    if $do_sudo && Exists 'sudo'; then
        alias_cmd=$(echo "$alias_cmd_tmp" | sed 's/\([^=]*=\)\(.*\)/\1sudo \2/')
    else
        alias_cmd=$alias_cmd_tmp
    fi


    if $do_global; then
        eval 'alias -g "$alias_cmd"' 
    else 
        eval 'alias "$alias_cmd"'
    fi

    unset do_global alias_cmd do_sudo do_test TEMP alias_cmd_tmp
}


